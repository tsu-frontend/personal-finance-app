{
  "compilerOptions": {
    "rootDir": "./scripts",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}

